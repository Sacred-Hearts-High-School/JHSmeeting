<% provide(:title, "管理者登入") %>


<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h2>管理者登入</h2>

    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :account %>
        <%= f.text_field :account, class: 'form-control' %>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "登入", class: "btn btn-primary btn-lg" %>

    <% end %>


  </div>
</div>