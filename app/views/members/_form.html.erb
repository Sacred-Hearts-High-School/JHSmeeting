<h2>2015天主教學校經營領導研習營</h2>

<%= simple_form_for @member, :html=>{:class=>'form-horizontal'} do |f| %>

    <% if @member.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

          <ul>
            <% @member.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-4 well well-sm">
        <legend><i class="glyphicon glyphicon-globe"></i> 新增報名資料</legend>
        <form action="#" method="post" class="form" role="form">
          <div class="row">
            <div class="col-xs-6 col-md-6">
              <%= f.input :name, :label=>false, :autofocus=>true,:placeholder=>"姓名",:required=>true %><br>
            </div>
            <div class="col-xs-6 col-md-6">
              <%= f.input :personal_id, :placeholder=>"身份證字號", :required=>true,:label=>false %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6 col-md-6">
              <%= f.input :school, :placeholder=>"就職學校", :required=>true,:label=>false %>
            </div>
            <div class="col-xs-6 col-md-6">
              <%= f.input :title, :label=>false, :placeholder=>"職稱",:required=>true %><br>
            </div>
            <div class="col-xs-6 col-md-6">
              <%= f.input :office_phone, :placeholder=>"辦公室電話", :required=>false,:label=>"格式05-1234567#123" %>
            </div>
            <div class="col-xs-6 col-md-6">
              <% f.input :mobile_phone, :placeholder=>"手機號碼", :input_html=>{:pattern=>"^[0][1-9]{1,3}[-][0-9]{6,8}$"}, :required=>true,:label=>"格式0912-345678" %>
              <%= f.input :mobile_phone, :placeholder=>"手機號碼", :required=>true, :label=>"格式0912-345678" %>
            </div>

          </div>

          <div class="row">

          </div>

          <%= f.input :email, :placeholder=>"電子信箱",:required=>true,:type=>"email",:label=>false %>
          <br />
          <%= f.input :person_type,:prompt=>"請選擇身份別",:input_html=>{:required=>true},:collection=>{"神父（共祭者煩請自備大白衣及白色領帶）"=>1,"修女"=>2,"非神職人員"=>3},:label=>false %>

          <%= f.input :room_type,:prompt=>"請選擇住宿選項",:input_html=>{:required=>true},:collection=>{"自理"=>1,"單人套房（1600元）"=>2,"雙人套房（900元，自行填寫共住夥伴）"=>3,"雙人住宿（900元，由主辦單位安排共住夥伴）"=>4},:label=>false %>
          <%= f.input :room_partiner, :input_html=>{:placeholder=>"指定共住夥伴姓名（留空白則由主辦單位安排）", :required=>false},:label=>false %>
          <%= f.input :room_date, :prompt=>"選擇住宿日期", :input_html=>{:required=>true},:collection=>{"自理"=>0,"10/13~14住宿兩天"=>1,"10/14住宿一天"=>2},:label=>false %>

          <%= f.input :food, :prompt=>"選擇餐食", :input_html=>{:required=>true},:collection=>{"葷食"=>1,"素食"=>2},:label=>false %>

        
          <%= f.input :transportation,:prompt=>"請選擇交通工具",:input_html=>{:required=>true},
                      :collection=>{"自行前往不需停車位"=>1,"自行前往需備停車位"=>2,"搭乘台鐵至斗六站由正心接送（09:00後站出口）"=>3,
                                    "搭乘高鐵至台中烏日站由正心接送（08:30於6號出口）"=>4,"搭乘高鐵至嘉義站由正心接送（08:45於一樓大廳）"=>5},:label=>false %>


          <%= f.input :group,:prompt=>"請選擇分組討論組別志願序",:input_html=>{:required=>true},
                      :collection=>{"A、B、C"=>1,"A、C、B"=>2,"B、A、C"=>3,"B、C、A"=>4,"C、A、B"=>5,"C、B、A"=>6}, :label=>false %>


          <br />
          <br />
          <%= f.button :submit, "送出報名資料", :class=>"btn btn-lg btn-block" %>


        </form>
      </div>
    </div>


<% end %>

